{

    "title": "Job",

    "type": "object",

    "collection": "jobs",

    "model.type": "ModelType",

    "validators:imports": {

        "@board/types/lib/job": "Job"

    },

    "checks:imports": {

        "@board/validators/lib/job": ["validate", "validatePartial"]

    },

    "checks": [
        ["./checks#parseMarkdown", ["'description'", "'description_html'"]]
    ],

    "properties": {

        "id": {

            "type": "number",

            "readOnly": true,

            "checks-complete": [

                ["./checks#inc", ["'counters.jobs'"]],

                ["./checks#unique", ["'jobs'", "'id'"]]

            ]

        },

        "$ref": "./common/properties.json",

        "title": {

            "type": "string",

            "validators": [

                "./validators#textsmall",

                ["./validators#minLength", [3]]

            ]

        },

        "type": {

            "type": "string",

            "validators": [

                "./validators#textsmall"

            ]

        },

        "location": {

            "type": "string",

            "validators": [

                "./validators#textsmall"

            ]

        },

        "remote": {

            "type": "boolean",

            "optional": true

        },

        "description": {

            "type": "string",

            "validators": [

                "./validators#textlarge",

                ["./validators#minLength", [3]],

                ["./validators#maxLength", [6000]]

            ]

        },

        "description_html": {

            "type": "string",

            "readOnly": true

        },

        "company": {

            "type": "string",

            "validators": "./validators#name"

        },

        "company_email": {

            "type": "string",

            "validators": "./validators#email"

        },

        "company_logo": {

            "type": "string",

            "validators": "./validators#url",

            "optional": true

        },

        "apply_url": {

            "type": "string",

            "validators": "./validators#url",

            "optional": true

        },

        "approved": {

            "type": "boolean",

            "optional": true

        },

        "payment_currency": {

            "type": "string",

            "validators": "./validators#currency",

            "optional": true

        },

        "payment_amount": {

            "type": "number",

            "optional": true

        },

        "payment_frequency": {

            "type": "string",

            "validators": "./validators#paymentFrequency",

            "optional": true

        },

        "status": {

            "type": "string",

            "validators": "./validators#jobStatus"

        }

    }

}
