{

    "title": "Job",

    "type": "object",

    "collection": "jobs",

    "imports": {

        "@board/types/lib/job": ["Job"],

        "checks:@board/validators/lib/job": ["validate", "validatePartial"]

    },

    "checks": [
        [
            "@devcarib/server/lib/data/checks#parseMarkdown",

            ["'description'", "'description_html'"]

        ],

        ["@devcarib/server/lib/data/checks#inc", ["'jobs'"]]

    ],

    "properties": {

        "id": {

            "type": "number",

            "readOnly": true,

            "checks-complete": [

                ["@devcarib/server/lib/data/checks#unique", ["'jobs'", "'id'"]]

            ]

        },

        "title": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/data/validators#textsmall",

                ["@devcarib/common/lib/data/validators#minLength", [3]]

            ]

        },

        "type": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/data/validators#textsmall"

            ]

        },

        "location": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/data/validators#textsmall"

            ]

        },

        "remote": {

            "type": "boolean",

            "optional": true

        },

        "description": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/data/validators#textlarge",

                ["@devcarib/common/lib/data/validators#minLength", [3]],

                ["@devcarib/common/lib/data/validators#maxLength", [6000]]

            ]

        },

        "description_html": {

            "type": "string",

            "readOnly": true

        },

        "company": {

            "type": "string",

            "validators": "@devcarib/common/lib/data/validators#name"

        },

        "company_email": {

            "type": "string",

            "validators": "@devcarib/common/lib/data/validators#email"

        },

        "company_logo": {

            "type": "string",

            "validators": "@devcarib/common/lib/data/validators#url",

            "optional": true

        },

        "apply_url": {

            "type": "string",

            "validators": "@devcarib/common/lib/data/validators#url",

            "optional": true

        },

        "approved": {

            "type": "boolean",

            "optional": true

        },

        "status": {

            "type": "string",

            "validators": "@devcarib/common/lib/data/validators#jobStatus"

        },

        "created_by": {

            "type": "object",

            "readOnly": true,

            "properties": {

                "id": "number",

                "username": "string"

            }

        },

        "created_on": {

            "type": "string",

            "readOnly": true

        },

        "last_updated_on": {

            "type": "string",

            "readOnly": true

        }

    }

}
