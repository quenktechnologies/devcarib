{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom"],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "jsx": "react-jsx",
        "typeRoots": ["../../node_modules/@types"]
    }
}
