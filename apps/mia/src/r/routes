-- Admins
POST    /admins      adminsCtrl.create +model="admin"
GET     /admins      adminsCtrl.search +policy="admin"

GET     /admins/:id  adminsCtrl.get
PATCH   /admins/:id  adminsCtrl.update +model="admin"
DELETE  /admins/:id  adminsCtrl.remove

-- Jobs
POST    /jobs        jobsCtrl.create +model="job"
GET     /jobs        jobsCtrl.search +policy="job"

PATCH   /jobs/:id    jobsCtrl.update +model="job"
GET     /jobs/:id    jobsCtrl.get
DELETE  /jobs/:id    jobsCtrl.remove

-- Users
GET     /users        usersCtrl.search +policy="user"

PATCH   /users/:id    usersCtrl.update +model="user"
GET     /users/:id    usersCtrl.get
DELETE  /users/:id    usersCtrl.remove

-- Events

POST    /events        eventsCtrl.create +model="event"
GET     /events        eventsCtrl.search +policy="event"

PATCH   /events/:id    eventsCtrl.update +model="event"
GET     /events/:id    eventsCtrl.get
DELETE  /events/:id    eventsCtrl.remove
