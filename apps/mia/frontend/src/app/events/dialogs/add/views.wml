{% import (GridLayout,Row,Column) from "@quenk/wml-widgets/lib/layout/grid" %}
{% import (TextField) from "@quenk/wml-widgets/lib/control/text-field" %}
{% import (DateField) from "@quenk/wml-widgets/lib/control/date-field" %}
{% import (DropList) from "@quenk/wml-widgets/lib/control/drop-list" %}
{% import (Label) from "@quenk/wml-widgets/lib/control/label" %}
{% import (Checkbox) from "@quenk/wml-widgets/lib/control/checkbox" %}

{% view AddEventDialogView (AddEventDialog from ".") %}
<GridLayout>

  <Row>

    <Column>

      <TextField
       wml:id="title"
       name="title"
       label="Title*"
       error={{@values.errors.title}}
       value={{@values.data.title}}
       onChange={{@values.onChange}} />

    </Column>

  </Row>

  <Row>

    <Column>

      <Label>Starts</Label>

    </Column>

    <Column span=8>

      <DateField
        wml:id="startDate"
        className="start-date -block"
        placeholder="YYYY-MM-DD"
        name="startDate"     
        value={{@values.start.date()}}
        onChange={{@values.start.onChange}} />

    </Column>

    <Column span=4>

      <DropList
        wml:id="startTime"
        name="startTime"
        className="start-time"
        value={{@values.start.time()}}
        options={{@values.start.timeOptions}}
        onSelect={{@values.start.onChange}} />

    </Column>

  </Row>

  <Row>

    <Column>

      <Label>Ends</Label>

    </Column>

    <Column span=8>

      <DateField
        wml:id="endDate"
        className="start-date -block"
        placeholder="YYYY-MM-DD"
        name="endDate"     
        value={{@values.end.date()}}
        onChange={{@values.end.onChange}} />

    </Column>

    <Column span=4>

      <DropList
        wml:id="endTime"
        name="endTime"
        className="start-time"
        value={{@values.end.time()}}
        options={{@values.end.timeOptions}}
        onSelect={{@values.end.onChange}} />

    </Column>

    <Column>

      <Label>All day event? </Label>

      <Checkbox
        wml:id="allDay"
        name="allDay"
        value={{@values.data.allDay}}
        onChange={{@values.onChange}} />

    </Column>

  </Row>

  <Row>

    <Column>

      <TextField
       wml:id="host"
       name="host"
       label="Host"
       error={{@values.errors.host}}
       value={{@values.data.host}}
       onChange={{@values.onChange}} />

    </Column>

  </Row>

  <Row>

    <Column>

      <TextField
       wml:id="location"
       name="location"
       label="Location"
       error={{@values.errors.location}}
       value={{@values.data.location}}
       onChange={{@values.onChange}} />

    </Column>

  </Row>

  <Row>

    <Column>

      <TextField
       wml:id="url"
       name="url"
       label="Url"
       error={{@values.errors.url}}
       value={{@values.data.url}}
       onChange={{@values.onChange}} />

    </Column>

  </Row>

  <Row>

    <Column>


    </Column>

  </Row>

  <Row>

    <Column>


    </Column>

  </Row>

  <Row>

    <Column>

    </Column>

  </Row>

</GridLayout>

