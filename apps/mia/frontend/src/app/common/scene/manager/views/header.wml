{% import (Button) from "@quenk/wml-widgets/lib/control/button" %}

{% view ManagerHeader where title: String, add?: () -> Void %}

<div class="mia-manager-header">

  <h1>{{ @title | text }}</h1>

  {% if @add %}

    <Button
      ww:text="Add"
      ww:className="-primary"
      ww:onClick={{@add}} />

 {% endif %}

</div>
