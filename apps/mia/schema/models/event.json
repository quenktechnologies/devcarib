{

    "title": "Event",

    "type": "object",

    "collection": "events",

    "paths": {

        "search": "/mia/r/events",

        "get": "/mia/r/events/{id}"

    },

    "imports": {

        "@mia/types/lib/event": ["Event"],


        "checks:@mia/validators/lib/event": ["validate", "validatePartial"]

    },

    "checks": [

        [
            "@devcarib/server/lib/data/checks#parseMarkdown", ["'description'", "'description_html'"]
        ]

    ],

    "checks-complete": [

        ["@devcarib/server/lib/data/checks#inc", ["'events'"]]

    ],

    "properties": {

        "id": {

            "type": "number",

            "readOnly": true,

            "checks-complete": [

                ["@devcarib/server/lib/data/checks#unique", ["'events'", "'id'"]]

            ]

        },

        "$ref": "./common/properties.json",

        "title": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/data/validators#textsmall",

                ["@devcarib/common/lib/data/validators#minLength", [3]]

            ]

        },

        "start": {

            "type": "string",

            "validators": "@devcarib/common/lib/data/validators#date",

            "filterAs": "date"

        },

        "end": {

            "type": "string",

            "optional": true,

            "validators": "@devcarib/common/lib/data/validators#date",

            "filterAs": "date"

        },

        "allDay": {

            "type": "boolean",

            "optional": true,

            "validators": "@devcarib/common/lib/data/validators#boolean"

        },

        "url": {

            "type": "string",

            "optional": true,

            "validators": "@devcarib/common/lib/data/validators#url"

        },

        "location": {

            "type": "string",

            "optional": true,

            "validators": [

                "@devcarib/common/lib/data/validators#textsmall"

            ]

        },

        "host": {

            "type": "string",

            "optional": true,

            "validators": "@devcarib/common/lib/data/validators#textmedium"

        },

        "description": {

            "type": "string",

            "optional": true,

            "validators": [

                "@devcarib/common/lib/data/validators#textlarge",

                ["@devcarib/common/lib/data/validators#minLength", [3]],

                ["@devcarib/common/lib/data/validators#maxLength", [6000]]

            ]

        },

        "description_html": {

            "type": "string",

            "readOnly": true

        }

    }

}
