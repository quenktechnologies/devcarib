{

    "title": "Job",

    "type": "object",

    "collection": "jobs",

    "model.type": "ModelType",

    "models:imports": {

        "$ref": "./common/imports.json",

        "@mia/types/lib/job": {

            "Job": "ModelType"

        },

        "@quenk/noni-mongodb/lib/database/collection": {

            "populate": "populate",

            "populateN": "populateN"

        }

    },

    "validators:imports": {

        "@mia/types/lib/job": "Job"

    },

    "checks:imports": {

        "@mia/validators/lib/job": ["validate", "validatePartial"]

    },

    "checks": [

        ["@devcarib/common/lib/checks#parseMarkdown", ["'description'", "'description_html'"]],

        ["@devcarib/common/lib/checks#inc", ["'users'"]]
    ],

    "properties": {

        "id": {

            "type": "number",

            "readOnly": true,

            "checks-complete": [

                ["@devcarib/common/lib/checks#unique", ["'jobs'", "'id'"]]

            ]

        },

        "$ref": "./common/properties.json",

        "title": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/validators#textsmall",

                ["@devcarib/common/lib/validators#minLength", [3]]

            ]

        },

        "type": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/validators#textsmall"

            ]

        },

        "location": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/validators#textsmall"

            ]

        },

        "remote": {

            "type": "boolean",

            "optional": true

        },

        "description": {

            "type": "string",

            "validators": [

                "@devcarib/common/lib/validators#textlarge",

                ["@devcarib/common/lib/validators#minLength", [3]],

                ["@devcarib/common/lib/validators#maxLength", [6000]]

            ]

        },

        "description_html": {

            "type": "string",

            "readOnly": true

        },

        "company": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#name"

        },

        "company_email": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#email"

        },

        "company_logo": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#url",

            "optional": true

        },

        "apply_url": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#url",

            "optional": true

        },

        "approved": {

            "type": "boolean",

            "optional": true

        },

        "payment_currency": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#currency",

            "optional": true

        },

        "payment_amount": {

            "type": "number",

            "optional": true

        },

        "payment_frequency": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#paymentFrequency",

            "optional": true

        },

        "status": {

            "type": "string",

            "validators": "@devcarib/common/lib/validators#jobStatus"

        }

    }

}
