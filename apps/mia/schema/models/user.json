{

    "title": "User",

    "type": "object",

    "collection": "users",

    "paths": {

        "search": "r/users",

        "get": "r/users/{id}"

    },

    "imports": {

        "@mia/types/lib/user": ["User"],

        "checks:@mia/validators/lib/user": ["validate", "validatePartial"]

    },

    "checks": [

        ["@devcarib/server/lib/data/checks#inc", ["'users'"]]

    ],

    "properties": {

        "id": {

            "type": "number",

            "filterAs": ["number", "numbers"],

            "readOnly": true,

            "checks": [

                [
                    "@devcarib/server/lib/data/checks#unique", ["_collection", "'id'"]
                ]

            ]

        },

        "name": {

            "type": "string",

            "filterAs": "matchci",

            "validation": "@devcarib/common/lib/data/validators#name"

        },

        "username": {

            "type": "string",

            "filterAs": "matchci",

            "validation": "@devcarib/common/lib/data/validators#username",

            "checks": [

                [
                    "@devcarib/server/lib/data/checks#unique", ["_collection", "'username'"]
                ]

            ]

        },

        "password": {

            "type": "string",

            "fields:hidden": true,

            "validation": ["@devcarib/common/lib/data/validators#password"],

            "checks": "@devcarib/server/lib/data/checks#bcrypt"

        },

        "status": {

            "type": "number",

            "filterAs": ["number", "numbers"]

        },

        "last_login": {

            "type": "string",

            "filterAs": "date",

            "readOnly": true

        }

    }

}
