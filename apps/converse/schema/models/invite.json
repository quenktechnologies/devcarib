{

    "title": "Invite",

    "type": "object",

    "collection": "invites",

    "paths": {

        "search": "/r/invites",

        "get": "/r/invites/{id}"

    },

    "imports": {

        "@converse/types/lib/invite": ["Invite"],

        "checks:@converse/validators/lib/invite": ["validate", "validatePartial"]

    },

    "checks-complete": [

        ["@devcarib/server/lib/data/checks#rand", ["'id'"]]

    ],

    "properties": {

        "id": {

            "type": "string",

            "readOnly": true

        },

        "name": {

            "type": "string",

            "filterAs": "matchci",

            "validators": "@devcarib/common/lib/data/validators#name"

        },

        "email": {

            "type": "string",

            "filterAs": "matchci",

            "validators": "@devcarib/common/lib/data/validators#email"

        },

        "token": {

            "type": "string",

            "readOnly": true

        },

        "message": {

            "type": "string",

            "optional": true,

            "validators": [

                "@devcarib/common/lib/data/validators#textlarge",

                ["@devcarib/common/lib/data/validators#minLength", [1]],

                ["@devcarib/common/lib/data/validators#maxLength", [6000]]

            ]

        },

        "accepted_on": {

            "type": "string",

            "readOnly": true

        }

    }

}
