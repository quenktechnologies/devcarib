        },

        "allDay": {

          "type": "boolean",

          "optional": true,

          "validators": "@devcarib/common/lib/data/validators#boolean"

        },

        "url": {

            "type": "string",

            "optional": true,

            "validators": "@devcarib/common/lib/data/validators#url"

