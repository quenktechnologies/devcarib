GET     /me         userCtrl.get
PATCH   /me         userCtrl.update +model="user"

POST    /posts      postsCtrl.create +model="post"
GET     /posts      postsCtrl.search +search="post"

GET     /posts/:id  postsCtrl.increment($request, "web-views")
                    postsCtrl.get +get="post"

--Note: Users can only modify posts they own.
PATCH   /posts/:id  postsCtrl.update +model="post" +owned
DELETE  /posts/:id  postsCtrl.remove +model="post" +owned

POST    /posts/:post/comments commentsCtrl.create +model="comment" 
                                                  +nparams="post"

GET     /posts/:post/comments commentsCtrl.search +search="comment" 
                                                  +query="post:{params.post}"
POST    /posts/:post/comments commentsCtrl.create +model="comment"
                                                  +params="post" 

-- Note: Users are only allowed to update comments they created.
PATCH   /comments/:id commentsCtrl.update +model="comment" +owned

-- Events
-- Users can only view system created events currently.
GET     /events       eventCtrl.search +search="event"

-- Invites, only creating them is supported right now.
POST    /invites      invitesCtrl.create +model="invite"
