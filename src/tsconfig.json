{
    "compilerOptions": {
        "baseUrl": "src",
        "lib": ["ES2015", "DOM"],
        "module": "commonjs",
        "target": "es5",
        "rootDir": ".",
        "outDir": "../lib",
        "moduleResolution": "node",
        "types": ["node"],
        "allowUnreachableCode": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules"]

}
