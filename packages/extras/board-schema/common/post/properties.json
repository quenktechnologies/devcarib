{

    "id": {

        "type": "number",

        "readOnly": true,

        "checks-complete": [

            ["./checks#inc", ["'counters.posts'"]],

            ["./checks#unique", ["'posts'", "'id'"]]

        ]

    },

    "title": {

        "type": "string",

        "validators": [

            "./validators#textsmall",

            ["./validators#minLength", [3]]

        ]

    },

    "type": {

        "type": "string",

        "validators": [

            "./validators#textsmall"

        ]

    },

    "location": {

        "type": "string",

        "validators": [

            "./validators#textsmall"

        ]

    },

    "remote": {

        "type": "boolean",

        "optional": true

    },

    "preview": {

        "type": "string",

        "validators": [

            ["./validators#minLength", [1]],

            ["./validators#maxLength", [240]]

        ]

    },

    "description": {

        "type": "string",

        "validators": [

            "./validators#textlarge",

            ["./validators#minLength", [3]],

            ["./validators#maxLength", [6000]]

        ]

    },

    "description_html": {

        "type": "string",

        "readOnly": true

    },

    "company": {

        "type": "string",

        "validators": "./validators#name"

    },

    "company_email": {

        "type": "string",

        "validators": "./validators#email"

    },

    "company_logo": {

        "type": "string",

        "validators": "./validators#url",

        "optional": true

    },

    "apply_url": {

        "type": "string",

        "validators": "./validators#url",

        "optional": true

    },

    "approved": {

        "type": "boolean",

        "optional": true

    }

}
