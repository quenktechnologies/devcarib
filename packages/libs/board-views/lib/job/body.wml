{% import (Job) from "@board/types/lib/job" %}

{% import (timestamp) from "@board/widgets/lib/filters" %}

{% import (JobFeaturesView) from "./features" %}

{# JobBodyView is the view for the body content of a job profile page. #}
{% view JobBodyView (Job) %}
<div id="main" class="ww-grid-layout board-job-body">

    <div class="ww-grid-layout__row">

      <div class="ww-grid-layout__column -span8 -offset2">

        <div class="ww-panel -default">

          <div class="ww-panel__header">

            <div class="ww-panel__header__content">

              {{ <JobFeaturesView(@)> }}

              <div class="board-job-timestamp">
                Posted {{@created_on | timestamp | text }}
              </div>

            </div>

          </div>

          <div class="ww-panel__body">

            <div class="board-job-salary">

              {% if @payment_amount ?? %}

                <span>{{ @payment_amount | text }}\u00a0<b>{{ @payment_currency | text }}\u002F{{ @payment_frequency | text }}
                      </b>
                </span>

              {% endif %}

            </div>

            <div class="board-job-html">
              {{@description_html | unsafe }}
            </div>

          </div>

        </div>

      </div>

    </div>

</div>
