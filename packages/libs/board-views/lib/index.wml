{% import (Job) from "@board/types/lib/job" %}
{% import (JobPanelView) from "@board/widgets/lib/job/panel" %}

{% import (HeadView, HeadViewContext) from "./common/head" %}
{% import (HeaderView) from "./common/header" %}

{# IndexView is the view for the main page of the site. #}
{% view IndexView where jobs: Job[] %}

  {% let headCtx:HeadViewContext = {
   
    title =  "Caribbean Developers Job Board - " +
             "Hire Software Developers From The Caribbean Region"
  }%}

  <html>


    {{ <HeadView(headCtx)> }}

    <body>

      {{ <HeaderView(@)> }}
  
        <section id="gayelle" class="ww-grid-layout">

          <div class="ww-grid-layout__row">

            <div class="ww-grid-layout__column -span12">
            
              <img class="logo-image"
                   height="100"
                   src="/assets/img/logo437x437.png" 
                   alt="Caribbean Developers Logo" />

              <h2>Hire Software Developers from the Caribbean region. </h2>

              <a id="create-new-job-button"
                 class="ww-button -primary -large"
                 href="/jobs/post">Job A Job</a>

            </div>

          </div>

        </section>

        <div id="main" class="ww-grid-layout">

        <div class="ww-grid-layout__row">

          <div class="ww-grid-layout__column -span8 -offset2">

            {% for job in @jobs %}

                {{ <JobPanelView(job)> }}

            {% else %}

              <div class="board-no-jobs">

                There are currently no jobs jobed. Please check again later!

              </div>

            {% endfor %}

          </div>

      </div>

    </div>

    </body>

  </html>
